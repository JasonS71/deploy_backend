			"script": {
				"type": "text/javascript",
				"exec": [
					"// Guardar automáticamente el token al iniciar sesión",
					"if (pm.request.url.path[1] === \"auth\" && pm.request.url.path[2] === \"login\") {",
					"    const responseJson = pm.response.json();",
					"    if (responseJson && responseJson.access_token) {",
					"        pm.environment.set(\"token\", responseJson.access_token);",
					"        console.log(\"Token guardado en variable de entorno: \" + responseJson.access_token);",
					"    }",
					"}"
				]
			}
		}
